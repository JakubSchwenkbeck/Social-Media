<div class="single-post">
  <h1><%= @post.title %></h1>

<% if @post.image.attached? %>
  <%= image_tag @post.image.variant(resize_to_limit: [800, 800]), alt: 'Post image', class: 'post-image' %>
<% end %>

<p><%= @post.content %></p>
<p>Posted by <%= link_to @post.user.username, profile_path(@post.user) %></p>

  <h1><%= @post.title %></h1>
  <p><%= @post.content %></p>
  <%= link_to 'Back to All Posts', posts_path, class: 'button' %>
</div>
